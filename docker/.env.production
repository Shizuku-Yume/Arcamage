# Arcamage Production Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================
# Application Settings
# ============================================
ARCAMAGE_DEBUG=false

# ============================================
# File Upload Limits
# ============================================
ARCAMAGE_MAX_UPLOAD_MB=20

# ============================================
# HTTP Client Settings
# ============================================
ARCAMAGE_HTTP_TIMEOUT=30

# ============================================
# Logging
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
ARCAMAGE_LOG_LEVEL=INFO

# Redact sensitive data (API keys, cookies) from logs
# WARNING: Always keep this enabled in production!
ARCAMAGE_LOG_REDACT=true

# CORS origins (comma-separated). Keep * only when public access is intended.
ARCAMAGE_CORS_ORIGINS=*

# ============================================
# Docker Settings
# ============================================
# Port to expose the application
ARCAMAGE_PORT=8000
